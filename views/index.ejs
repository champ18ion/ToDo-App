<html>
  <head>
    <title> ToDo App </title>
    <link rel="stylesheet" href="/css/style.css" />
    <!-- fontAwesome -->
    <script
      src="https://kit.fontawesome.com/f3d3bcd31b.js"
      crossorigin="anonymous"
    ></script>
    <!-- Favicon -->
    <link rel="shortcut icon" href="/to-do-list.png" type="image/x-icon">
    <!-- google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin><link href="https://fonts.googleapis.com/css2?family=Arima&family=Exo+2&family=Syne+Mono&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="/js/script.js" defer></script>
    <script src="" defer></script>
  </head>

  <body>
    <div id="container">
      <div id="upper-container">
        <div id="title-box">
          <h1 id="title-text" style="font-family: sans-serif">
            <i class="fa-solid fa-clipboard-list"></i>
             To-do 
          </h1>
        </div>
        <div id="form-container">
          <form  class="add-form" action="/add-task" method="post">
            <div id="task-container">
              <span class="container-heading"> &nbsp; DESCRIPTION </span>
              <textarea
                name="task"
                placeholder="&nbsp; What do you want to do?"
                required
              ></textarea>
            </div>
            <div id="outer">
              <div id="outer-form">
                <div id="category-select-container">
                  <span class="container-heading"> &nbsp; CATEGORY </span>
                  <select name="category" id="drop-down" required>
                    <option value="">Choose a category</option>
                    <option value="Personal">Personal</option>
                    <option value="Work">Work</option>
                    <option value="School">School</option>
                    <option value="Cleaning">Cleaning</option>
                    <option value="Other">Other</option>
                  </select>
                </div>

                <div id="date-container">
                  <span class="container-heading"> &nbsp; DUE DATE </span>
                  <input id="date-input" type="date" name="date" />
                </div>
              </div>

              <div id="btn-container">
                <button class="add-btn" type="submit">
                  <i class="fas fa-plus"></i>
                  <span id="button-text"> &nbsp;&nbsp; Add Task</span>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div id="lower">
        
            <form action="/delete/" method="GET">
              <button id="del-btn" type="submit">
                <i class="fas fa-trash"></i
                ><span id="button-text" style="position: relative; top: -1px"
                  >&nbsp;&nbsp; Delete Tasks</span
                >
              </button>
              <div id="list">
                <ul>
              <% for(let i of tasks) {%>
              <li>
                 <span id="checkbox-container">
                   <input id="check" type="checkbox" name="<%= i._id %>" />
                 
                   <label for="check"  style="display: inline-block">
                     <span id="list-task"><%= i.task %></span> <br />
                     <span id="list-date"><i class="fa fa-calendar" aria-hidden="true"></i>
                     <span id="task-date-value"> <%= i.date %></span>
                    </label>
                  </span>
                <div class="list-category">
                  <p id="category-box-text"><%= i.category %></p>
                </div>
              </li>
              <%} %>
              
            </form>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>

